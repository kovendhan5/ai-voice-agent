# Ultra-Fast Cloud Deployment
FROM python:3.10-slim

WORKDIR /app

# Install only essential dependencies
RUN pip install flask flask-cors numpy requests gunicorn

# Copy minimal files
COPY src/app_minimal.py ./app.py
COPY src/voice_chat_interface.html ./templates/voice_chat_interface.html

# Create templates directory
RUN mkdir -p templates

# Copy interface to templates
COPY src/voice_chat_interface.html ./templates/

EXPOSE 8080

# Simple startup
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "1", "app:app"]
